<UserControl
    x:Class="OmoOmotegaki.Controls.ShinryouDateSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    d:DesignHeight="300"
    d:DesignWidth="300"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="true"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BorderBrush" Color="#FFDBE6F9" />

        <CollectionViewSource x:Key="CollectionView" Source="{Binding}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Year" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Year" />
                <scm:SortDescription PropertyName="Date" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <ListView
        x:Name="_listView"
        Padding="4,0"
        Background="Transparent"
        BorderThickness="0"
        FontSize="16"
        ItemsSource="{Binding Source={StaticResource CollectionView}}"
        KeyDown="ListView_KeyDown"
        MouseDoubleClick="ListView_MouseDoubleClick"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        SelectionChanged="ListView_SelectionChanged"
        SelectionMode="Single">
        <ListView.ItemContainerStyle>
            <!--  各グループ内の日付アイテムのスタイル  -->
            <Style TargetType="ListViewItem">
                <Style.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="White" />
                </Style.Resources>
                <Setter Property="Cursor" Value="Hand" />
            </Style>
        </ListView.ItemContainerStyle>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Background="White" Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Margin="4,1" Orientation="Horizontal">
                    <!--  日付の頭に付ける丸印  -->
                    <Ellipse
                        Name="dot"
                        Width="8"
                        Height="8"
                        Fill="#FF91B8FF" />
                    <!--  日付テキスト  -->
                    <TextBlock Margin="3,0,0,0" Text="{Binding Date}" />
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.GroupStyle>
            <GroupStyle>
                <GroupStyle.Panel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GroupStyle.Panel>
                <GroupStyle.ContainerStyle>
                    <!--  年グループのスタイル  -->
                    <Style TargetType="GroupItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupItem">
                                    <Expander
                                        Margin="0,0,2,2"
                                        Background="{StaticResource BorderBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        Collapsed="Expander_Collapsed"
                                        Expanded="Expander_Expanded">
                                        <Expander.Header>
                                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                        </Expander.Header>
                                        <ItemsPresenter />
                                    </Expander>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupStyle.ContainerStyle>
            </GroupStyle>
        </ListView.GroupStyle>
    </ListView>
</UserControl>
