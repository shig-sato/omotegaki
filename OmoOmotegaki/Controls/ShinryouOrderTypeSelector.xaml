<UserControl
    x:Class="OmoOmotegaki.Controls.ShinryouOrderTypeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="32"
    d:DesignWidth="120"
    mc:Ignorable="d">
    <ComboBox x:Name="_comboBox" SelectionChanged="_comboBox_SelectionChanged">
        <ComboBoxItem>
            <TextBlock Text="日付" />
        </ComboBoxItem>
        <ComboBoxItem>
            <DockPanel>
                <TextBlock Text="歯順Ａ" />
                <Image Source="/表書き;component/resources/歯順A.jpg" />
            </DockPanel>
        </ComboBoxItem>
        <ComboBoxItem>
            <DockPanel>
                <TextBlock Text="歯順Ｂ" />
                <Image Source="/表書き;component/Resources/歯順B.jpg" />
            </DockPanel>
        </ComboBoxItem>

        <ComboBox.ItemContainerStyle>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value="0,1,0,0" />
                <Setter Property="Padding" Value="8" />
            </Style>
        </ComboBox.ItemContainerStyle>
        <ComboBox.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style TargetType="Image">
                <Setter Property="StretchDirection" Value="Both" />
                <Setter Property="Stretch" Value="Fill" />
                <Setter Property="Height" Value="18" />
                <Setter Property="Margin" Value="8,0,0,0" />
            </Style>
        </ComboBox.Resources>
    </ComboBox>
</UserControl>
